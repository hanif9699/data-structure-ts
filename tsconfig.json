{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "sourceMap": false,
        "outDir": "build",
        "rootDir": "src",
        "declaration": false,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "noEmit": false,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts"
    ]
}